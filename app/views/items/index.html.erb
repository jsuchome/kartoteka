<p>
<%= link_to 'Nová položka', new_item_path, class: "button" %>
<%= link_to 'Křestní zápis', {:action => :new, :type => 'krestni_zapis'}, class: "button"%>
</p>

<%= search_form_for @search do |f| %>
  <div class="field">
    <%= f.label :PRIJMENI_cont, "Přímení obsahuje" %>
    <%= f.text_field :PRIJMENI_cont %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<table id ="items">
  <tr>
    <th><%= sort_link(@search, :PRIJMENI, "Jméno a příjmení") %></th>
    <th>Rodné číslo</th>
    <th>Stav</th>
    <th>Datum narození</th>
    <th>Místo narození</th>
    <th>Bydliště</th>
    <th>Křest</th>
  </tr>
  <% @items.each do |c| %>
    <%
    krest = c.DAT_KRTU
    if krest.nil?
      if c.KREST.nil? || c.KREST.upcase != "A"
        krest = "Ne"
      else
        krest = "Ano"
      end
    end
    %>

    <tr>
        <td><%= link_to "#{c.JMENO} #{c.PRIJMENI}", {:action => 'show', :id => c.ROD_CISLO, :jmeno => c.JMENO, :prijmeni => c.PRIJMENI} -%></td>
        <td><%= c.ROD_CISLO %> </td>
        <td><%= c.STAV %></td>
        <td><%= c.DAT_NAR %></td>
        <td><%= c.MISTO_NAR %></td>
        <td><%= c.BYDL %></td>
        <td><%= krest %></td>
    </tr>
  <% end %>
</table>
